<% layout('layouts/boilerplate.ejs') -%>

<body>
  <h3 class="mt-3" style="text-align: center;">
    <b>Edit your listing</b>
  </h3>
  <br><br>

  <div class="container">
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" id="title" required>
      </div>
      
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" id="description" rows="3" required><%= listing.description %></textarea>
      </div>

      <!-- Image -->
      <div class="mb-3">Original listing Image
       <img src="<%= originalImageUrl %>" alt="<%= listing.title %>" style="width: 200px;height: 200px;">
      </div>

       <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input type="file" class="form-control" id="image" name="listing[image]"  value="<%= listing.image %>">
        <div class="invalid-feedback">Please provide a valid image.</div>
      </div>

      

      <!-- Price & Location -->
      <div class="row mb-3">
        <div class="col-md-6">
          <label for="price" class="form-label">Price</label>
          <input type="text" name="listing[price]" value="<%= listing.price %>" class="form-control" id="price" required>
        </div>
        <div class="col-md-6">
          <label for="location" class="form-label">Location</label>
          <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" id="location" required>
        </div>
      </div>

      <!-- Country -->
      <div class="row mb-3">
        <label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" id="country" required>
      </div>

      <!-- Submit -->
      <button type="submit" class="btn btn-primary form-control">Edit</button>
    </form>
  </div>

  <script src="/js/script.js"></script>
</body>
